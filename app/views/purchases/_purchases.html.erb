<div class='card'>
  <table class='table table-striped table-bordered table-hover' style='margin-bottom: 0;'>
    <thead class='table-dark bg-dark'>
      <tr>
        <th scope='col'>#</th>
        <th scope='col'><%= Customer.model_name.human %></th>
        <th scope='col'><%= Item.human_attribute_name(:description) %></th>
        <th scope='col'><%= Item.human_attribute_name(:price) %></th>
        <th scope='col'><%= Purchase.human_attribute_name(:purchase_count) %></th>
        <th scope='col'><%= Merchant.human_attribute_name(:address) %></th>
        <th scope='col'><%= Merchant.model_name.human %></th>
        <th scope='col'>Gross income</th>
      </tr>
    </thead>

    <tbody>
      <% @purchases.each do |purchase| %>
        <tr>
          <th scope='row'><%= purchase.id %></th>
          <td><%= purchase.customer.name %></td>
          <td><%= purchase.item.description %></td>
          <td><%= number_to_currency(purchase.item.price) %></td>
          <td><%= purchase.purchase_count %></td>
          <td><%= purchase.merchant.address %></td>
          <td><%= purchase.merchant.name %></td>
          <td><%= number_to_currency(purchase.gross_income) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
